<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LockScreenCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="TextViewStyle.Button" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:textSize">@dimen/text_size_16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>