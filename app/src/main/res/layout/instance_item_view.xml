<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_calendar_color"
        android:layout_width="@dimen/width_8dp"
        android:layout_height="@dimen/height_8dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@drawable/background_calendar_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:textSize="@dimen/text_size_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_calendar_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_calendar_color"
        app:layout_constraintTop_toTopOf="@+id/view_calendar_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_view_title"
        app:layout_constraintStart_toStartOf="@+id/text_view_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title">

        <TextView
            android:id="@+id/text_view_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="오전 8:00" />

        <TextView
            android:id="@+id/text_view_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=" - 오전 9:00" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>